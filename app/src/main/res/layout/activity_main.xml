<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.alex.cameracheck.MainActivity"
android:background="#737373">


<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="30dp"
    android:src="@android:drawable/ic_media_rew"
    android:id="@+id/imageView2" />
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="130dp"
    android:src="@android:drawable/ic_media_rew"
    android:id="@+id/imageView" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="40dp"
    android:text="Press Down or Up"
    android:textSize="32dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="130dp"
    android:text="Press Down or Up"
    android:textSize="32dp"
    android:id="@+id/textView" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Extreme TIP!: Wait Until u hear a Sound until press again..."
    android:textSize="20dp"
    android:textColor="#ff0000"
    android:textStyle="bold"
    android:id="@+id/textView2"
    android:layout_above="@+id/imageButton"
    android:layout_toRightOf="@+id/back_camera_preview"
    android:layout_toEndOf="@+id/back_camera_preview" />

<ImageButton
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/speaker"
    android:id="@+id/imageButton"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:onClick="sound"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="exit"
    android:onClick="exit"
    android:id="@+id/button2"
    android:layout_above="@+id/imageButton2"
    android:layout_centerHorizontal="true" />

<FrameLayout
    android:layout_width="1dp"
    android:layout_height="1dp"
    android:layout_marginTop="360dp"
    android:id="@+id/back_camera_preview">
</FrameLayout>
<FrameLayout
    android:layout_width="1dp"
    android:layout_height="1dp"
    android:layout_marginTop="361dp"
    android:id="@+id/front_camera_preview">

</FrameLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Front Camera"
    android:textAllCaps="false"
    android:textSize="10dp"
    android:onClick="startF"
    android:id="@+id/buttonF"
    android:layout_above="@+id/button2"
    android:layout_alignLeft="@+id/button2"
    android:layout_alignStart="@+id/button2" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Back Camera"
    android:textAllCaps="false"
    android:textSize="10dp"
    android:onClick="startB"
    android:id="@+id/buttonB"
    android:layout_above="@+id/buttonF"
    android:layout_alignLeft="@+id/buttonF"
    android:layout_alignStart="@+id/buttonF" />

<ImageButton
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@android:drawable/ic_menu_gallery"
    android:onClick="fileloc"
    android:layout_alignParentBottom="true"
    android:layout_alignLeft="@+id/textView2"
    android:layout_alignStart="@+id/textView2"
    android:id="@+id/imageButton2" />

<Switch
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dual Camera Shot"
    android:id="@+id/switch1"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

</RelativeLayout>
